{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*",
        "test/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
